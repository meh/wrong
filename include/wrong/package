#pragma once

#include <string>

#include <wrong/util>
#include <wrong/flags>

namespace wrong {

class package final
{
public:
	package&
	name (std::string value)
	{
		_name = value;
		return *this;
	}

	package&
	statically (bool value)
	{
		_static = value;
		return *this;
	}

	package&
	at_least_version (std::string value)
	{
		_version = value;
		return *this;
	}

	int
	apply (flags& flags) const
	{
		auto common = [this](auto& cmd) -> auto& {
			cmd << "pkg-config \"" << _name << "\"";

			if (_static) {
				cmd << " --static";
			}

			if (_version) {
				cmd << " --atleast-version " << _version.value();
			}

			return cmd;
		};

		auto ldflags = util::shell([=](auto& cmd) {
			common(cmd) << " --libs";
		});

		if (ldflags.status != 0) {
			return ldflags.status;
		}

		auto cflags = util::shell([=](auto& cmd) {
			common(cmd) << " --cflags";
		});

		if (cflags.status != 0) {
			return cflags.status;
		}

		return 0;
	}

private:
	std::string _name;
	bool _static = false;
	std::optional<std::string> _version;
};

}
