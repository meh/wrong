#pragma once

#include <string>
#include <filesystem>

namespace wrong { namespace remote {

class base
{
public:
	virtual ~base () { }
	virtual std::filesystem::path path () const = 0;
	virtual int fetch () = 0;
};

class dummy final : public virtual base
{
public:
	std::filesystem::path
	path () const
	{
		return "";
	}

	int
	fetch ()
	{
		return 0;
	}
};

class http final : public virtual base
{ };

class git final : public virtual base
{
public:
	std::filesystem::path
	path () const
	{
		return "";
	}

	int
	fetch ()
	{
		return 0;
	}

public:
	git&
	url (std::string url)
	{
		_url = url;

		return *this;
	}

private:
	std::string _url;
};

class hg final : public virtual base
{ };

class svn final : public virtual base
{ };


} }
