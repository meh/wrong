#pragma once

#include <filesystem>
#include <wrong/flags>

namespace wrong { namespace builder {

class base
{
public:
	// Without a virtual destructor the children won't be properly destroyed.
	virtual ~base () { }

	/*! Build the code at the given path.
	 */
	virtual int build (std::filesystem::path path) = 0;

	/*! Use this builder.
	 */
	virtual int use (std::filesystem::path path, flags& flags) = 0;
};

} }
