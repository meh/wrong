#include <wrong/build>
#include <wrong/dependency/remote/git>
#include <wrong/builder/compile>

using namespace wrong;

int
main ()
{
	// Define a build.
	wrong::build build;

	// A dependency named `foo`, which will be remotely fetched from the given
	// URL.
	//
	// The dependency resides within the `example/foo/` folder in the given
	// remote.
	build.dependency<builder::compile<dependency::remote::git>>("foo")
		.remote("https://github.com/meh/wrong")
		.root("example/foo")
		.files({ "source/*.cpp" });

	// A local dependency named `bar` residing at `example/path`.
	build.dependency<dependency::local>("bar")
		.path("example/bar");

	// A local dependency using pkg-config.
	build.dependency<dependency::package>("xcb");

	build.program("foo");

	return build.run("foo");
}
